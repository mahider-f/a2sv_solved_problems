class Solution:
    def minimumIndex(self, nums: List[int]) -> int:
        count = Counter(nums)
        num = max(count, key = count.get)
        total_count = count[num]
        n = len(nums)

        first = 0

        for i in range(n-1):
            if nums[i] == num:
                first += 1
            second = total_count - first

            if first*2 > i+1 and second*2 > n-i-1:
                return i
        return -1
