class Solution:
    def maxScoreIndices(self, nums: List[int]) -> List[int]:
        total_ones = sum(nums)
        left_zeros = 0
        right_ones = total_ones

        scores = []

        for i in range(len(nums) + 1):
            scores.append(left_zeros + right_ones)

            if i < len(nums):
                if nums[i] == 0:
                    left_zeros += 1
                else:
                    right_ones -= 1

        max_score = max(scores)
        return [i for i, v in enumerate(scores) if v == max_score]
