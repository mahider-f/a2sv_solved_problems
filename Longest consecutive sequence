class Solution:
    def longestConsecutive(self, nums: List[int]) -> int:
        num = set(nums)
        max_count = 0

        if len(nums) == 0:
            return 0

        for x in num:
            if x-1 not in num:

                current_num = x
                count = 1
                while (current_num +1) in num:
                    current_num +=1
                    count += 1

                max_count = max(max_count, count)
        return max_count
